<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/alert_offer_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image2" />

    <TextView
        android:id="@+id/alert_offer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#80000000"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:fontFamily="@font/abdoullahashgarregular"
        android:text="Title"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@id/alert_offer_img"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/alert_provider_card"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintStart_toStartOf="@id/alert_offer_title"
        app:layout_constraintTop_toBottomOf="@id/alert_offer_img">

        <ImageView
            android:id="@+id/alert_provider_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_solid" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/alert_provider_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:text="Foulen Ben Foulen"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/alert_provider_card"
        app:layout_constraintEnd_toEndOf="@+id/alert_offer_title"
        app:layout_constraintStart_toEndOf="@+id/alert_provider_card"
        app:layout_constraintTop_toTopOf="@+id/alert_provider_card" />

    <TextView
        android:id="@+id/alert_offer_description"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="#15000000"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="hgdfbgvubdf dfjhbgjdfb ghvzhgervfhe ghesrfbvhgsgherfb hgesfbvhgezsfb hgsebfhgbsehftgse hfgebfhjesbfjhg hesgfbvhegsbf  grgd dfhgnbjdfn hfdbngjdfn fdngbjdfn jfdhbngjkdf nfdbkhjdnf iufdhngikniudbngk dfgnjkd jdhfnbgjkh uifdhgkn dfbngjkh hbfgjkhdnjhkjkhhfndgk kdfngk jhkfdgk knkfgnkhj kdfngk kjb k"
        app:layout_constraintEnd_toEndOf="@id/alert_offer_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/alert_offer_title"
        app:layout_constraintTop_toBottomOf="@id/alert_provider_card" />


</androidx.constraintlayout.widget.ConstraintLayout>